<%= form_for @purchase_order, :html => { class: 'form-horizontal' } do |f| %>
  <%= render 'layouts/error_messages', target: @purchase_order %>
  <div class="control-group">
    <%= f.label :purchase_order_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sale_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :sale_number, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :invoice_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :invoice_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :purchase_order_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :purchase_order_date %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :region_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:region_id, Region.all, :id, :name) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :apm, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :apm, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sts, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sts, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :funding_source_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:funding_source_id, FundingSource.all, :id, :name) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :net_suite_account_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:net_suite_account_id, NetSuiteAccount.all, :id, :name) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                purchase_orders_path, :class => 'btn' %>
  </div>
<% end %>

