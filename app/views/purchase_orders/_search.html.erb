<div id="search_form">
  <%= search_form_for @q, html: { class: 'form-horizontal' } do |f| %>
    <div class="control-group">
      <%= f.label :purchase_order_number, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :number_cont, class: 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :sale_number, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :sale_number_cont, class: 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :invoice_number, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :invoice_number_cont, class: 'text_field' %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to "Reset", url_for, class: 'btn' %>
    </div>
  <% end %>
</div>
